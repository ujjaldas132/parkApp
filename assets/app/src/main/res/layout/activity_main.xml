<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findSpot"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="FIND A SPOT"
        android:layout_below="@+id/header"

        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:onClick="findSpot"



        />




    <Button
        android:id="@+id/bookSpot"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BOOK A SPOT"
        android:layout_below="@+id/findSpot"

        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:onClick="bookSpot"



        />




    <Button
        android:id="@+id/carStatus"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="YOUR CAR"
        android:layout_below="@+id/bookSpot"

        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:onClick="getCarStatus"



        />

    <Button
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Profile"
        android:layout_below="@+id/carStatus"
        android:background="@drawable/round_button"

        android:layout_marginLeft="310dp"
        android:layout_marginTop="-330dp"
        android:onClick="profile"



        />



</RelativeLayout>