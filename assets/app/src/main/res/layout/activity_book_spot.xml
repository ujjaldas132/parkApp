<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookSpot">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:text="BOOK THE SPOT"
        android:textAlignment="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"
        android:background="#C7CEB4"/>



    <TextView
        android:id="@+id/spotId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spotid"
        android:layout_below="@+id/header"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/spotIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"

        android:layout_alignBottom="@+id/spotId"
        android:layout_marginLeft="120dp"/>



    <TextView
        android:id="@+id/carId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAR number"
        android:layout_below="@+id/spotId"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/carIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AS O568 haha"

        android:layout_alignBottom="@+id/carId"
        android:layout_marginLeft="120dp"/>


</RelativeLayout>